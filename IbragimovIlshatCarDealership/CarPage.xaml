<Page x:Class="IbragimovIlshatCarDealership.CarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IbragimovIlshatCarDealership"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1000" 
      Title="CarPage" FontFamily="Times New Roman" IsVisibleChanged="Page_IsVisibleChanged">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <StackPanel Margin="10" Orientation="Horizontal">
                <TextBlock Text="Поиск: " TextAlignment="Right" VerticalAlignment="Center" Width="auto" FontSize="20"></TextBlock>
                <TextBox Name="TBoxSearch" TextChanged="TBoxSearch_TextChanged"  Width="390" Height="30" FontSize="20"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Диапазон цен: " TextAlignment="Right" VerticalAlignment="Center" Width="auto" FontSize="20"></TextBlock>
                <ComboBox Name="ComboType" SelectionChanged="ComboType_SelectionChanged" Height="30" FontSize="20" Width="310">
                    <TextBlock>Все</TextBlock>
                    <TextBlock>до 500 тысяч</TextBlock>
                    <TextBlock>от 500 тысяч до 1 миллиона</TextBlock>
                    <TextBlock>от 1 миллиона до 5 миллионов</TextBlock>
                    <TextBlock>от 5 миллионов до 10 миллионов</TextBlock>
                    <TextBlock>от 10 миллионов</TextBlock>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="5">
                <RadioButton Content="По возврастанию цены" GroupName="Sort" Width="auto" FontSize="20" Checked="RButtonUp_Checked"  Name="RButtonUp"></RadioButton>
                <RadioButton Content="По убыванию цены" GroupName="Sort" Width="auto" FontSize="20" Checked="RButtonDown_Checked"  Name="RButtonDown"></RadioButton>
            </StackPanel>
        </StackPanel>

        <Button Content="Добавить" Name="btnAdd" Click="btnAdd_Click" Grid.Column="1" Margin="10"></Button>

        

        <ListView Name="CarListView" Grid.Row="1" HorizontalContentAlignment="Stretch" Grid.ColumnSpan="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  Width="300"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>


                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>

                        </Grid.RowDefinitions>

                        <Image Height="150" Width="300" Grid.Column="0" Grid.RowSpan="7" Stretch="UniformToFill">
                            <Image.Source>
                                <Binding Path="Image">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            image/car_noback.png
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>

                        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" Margin="5 0 0 0">
                            <TextBlock Text="{Binding MarkString}" FontSize="25"></TextBlock>
                            <TextBlock Text=" "></TextBlock>
                            <TextBlock Text="{Binding Model}" FontSize="25"></TextBlock>
                        </StackPanel>
                        <Button Name="btnEdit" Content="Редактировать" Click="btnEdit_Click" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right" Margin="5 5 25 0"></Button>
                        <Button Name="btnDelete" Content="Удалить" Click="btnDelete_Click"  Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" Margin="5 5 25 0"></Button>
                        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal"  Margin="5 0 0 5">
                            <TextBlock Text="Цена:" FontSize="25"></TextBlock>
                            <TextBlock Text=" "></TextBlock>
                            <TextBlock Text="{Binding Price}" FontSize="25"></TextBlock>
                            <TextBlock Text=" рублей" FontSize="25"></TextBlock>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal"  Margin="5">
                            <TextBlock Text="Год:"></TextBlock>
                            <TextBlock Text=" "></TextBlock>
                            <TextBlock Text="{Binding YearProduct}"></TextBlock>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Grid.Row="3" Orientation="Horizontal"  Margin="5">
                            <TextBlock Text="Цвет:"></TextBlock>
                            <TextBlock Text=" "></TextBlock>
                            <TextBlock Text="{Binding Color}"></TextBlock>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Grid.Row="4" Orientation="Horizontal"  Margin="5">
                            <TextBlock Text="Кузов:"></TextBlock>
                            <TextBlock Text=" "></TextBlock>
                            <TextBlock Text="{Binding ClassString}"></TextBlock>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Grid.Row="5" Orientation="Horizontal"  Margin="5">
                            <TextBlock Text="В наличии:"></TextBlock>
                            <TextBlock Text=" "></TextBlock>
                            <TextBlock Text="{Binding Count}"></TextBlock>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Grid.Row="6" Orientation="Horizontal"  Margin="5">
                            <TextBlock Text="Описание:"></TextBlock>
                            <TextBlock Text=" "></TextBlock>
                            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" MaxWidth="900"></TextBlock>
                        </StackPanel>
                      
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock Name="tbCount" Grid.Row="2" Width="250" TextAlignment="Left" HorizontalAlignment="Right" Background="#8db3c9"  Grid.ColumnSpan="2"></TextBlock>
    </Grid>
</Page>
