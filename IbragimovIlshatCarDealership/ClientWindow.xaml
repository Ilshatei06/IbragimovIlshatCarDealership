<Window x:Class="IbragimovIlshatCarDealership.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IbragimovIlshatCarDealership"
        mc:Ignorable="d"
        Title="Добавление клиента" Height="450" Width="800" FontFamily="Times New Roman">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Фамилия: " Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25 0 0 0"></TextBlock>
        <TextBlock Text="Имя: " Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25 0 0 0"></TextBlock>
        <TextBlock Text="Отчество: " Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25 0 0 0"></TextBlock>
        <TextBlock Text="Номер паспорта: " Grid.Column="0" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25 0 0 0"></TextBlock>
        <TextBlock Text="Адрес прописки: " Grid.Column="0" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25 0 0 0"></TextBlock>
        <TextBlock Text="Возраст: " Grid.Column="0" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25 0 0 0"></TextBlock>
        <TextBlock Text="Пол: " Grid.Column="0" Grid.Row="6" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25 0 0 0"></TextBlock>

        <TextBox Text="{Binding Surname}" Grid.Column="1" Grid.Row="0" Height="30" Width="350" HorizontalAlignment="Left"></TextBox>
        <TextBox Text="{Binding Name}" Grid.Column="1" Grid.Row="1" Height="30" Width="350" HorizontalAlignment="Left"></TextBox>
        <TextBox Text="{Binding Patronymic}" Grid.Column="1" Grid.Row="2" Height="30" Width="350" HorizontalAlignment="Left"></TextBox>
        <TextBox Text="{Binding Passport}" Grid.Column="1" Grid.Row="3" Height="30" Width="150" HorizontalAlignment="Left" MaxLength="10"></TextBox>
        <TextBox Text="{Binding Adress}" Grid.Column="1" Grid.Row="4" Height="30" Width="555" HorizontalAlignment="Left"></TextBox>
        <TextBox Text="{Binding Age}" Grid.Column="1" Grid.Row="5" Height="30" Width="50" HorizontalAlignment="Left"></TextBox>
        <ComboBox Name="ComboGender" Grid.Column="1" Grid.Row="6" Height="30" Width="225" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5">
            <TextBlock>Мужской</TextBlock>
            <TextBlock>Женский</TextBlock>
        </ComboBox>

        <Button Name="addButton" Content="Добавить" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Click="addButton_Click"></Button>
    </Grid>
</Window>
