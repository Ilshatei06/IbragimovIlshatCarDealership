<Page x:Class="IbragimovIlshatCarDealership.SalePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IbragimovIlshatCarDealership"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SalePage" FontFamily="Times New Roman">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Сотрудник:" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25 0 0 0"></TextBlock>
        <TextBlock Text="Клиент:" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25 0 0 0"></TextBlock>
        <TextBlock Text="Дата:" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25 0 0 0"></TextBlock>
        <TextBlock Text="Машина:" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25 0 0 0"></TextBlock>
        <TextBlock Text="VIN:" Grid.Column="0" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25 0 0 0"></TextBlock>
        <TextBlock Text="Существующие продажи автомобилей с данной конфигурацией:" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25 25 0 0"></TextBlock>
        <TextBlock Text="Сотрудник" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="100 10 0 5"></TextBlock>
        <TextBlock Text="Клиент" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="450 10 0 5"></TextBlock>
        <TextBlock Text="Дата продажи" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="725 10 0 5"></TextBlock>
        <TextBlock Text="VIN" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="1000 10 0 5"></TextBlock>

        <ComboBox Name="ComboSerchWorker" Grid.Column="1" Grid.Row="0" 
                   SelectedValuePath="WorkerID" DisplayMemberPath="WorkerFullName" 
                   FontSize="20" Height="30" Width="350" HorizontalAlignment="Left" 
                   IsTextSearchEnabled="True" IsEditable="True" Margin="5 0 0 0"/>
        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1">
            <ComboBox Name="ComboSerchClient" 
                      SelectedValuePath="ClientID" DisplayMemberPath="ClientFullName" 
                      FontSize="20" Height="30" Width="350" HorizontalAlignment="Left" 
                      IsTextSearchEnabled="True" IsEditable="True" Margin="5 0 0 0"></ComboBox>
            <Button Name="addClient" Content="Добавить нового клиента" Width="250" Margin="25 0 0 0" Click="addClient_Click"></Button>
        </StackPanel>


        <DatePicker Name="saleDate" Text="{Binding SaleDate}" Grid.Column="1" Grid.Row="2" Height ="30" Width="150" FontSize="20" HorizontalAlignment="Left" Margin="5 0 0 0"></DatePicker>

        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3 0 0 0">
            <TextBlock Text="{Binding  Mark.MarkName}"></TextBlock>
            <TextBlock Text=" "></TextBlock>
            <TextBlock Text="{Binding Model}"></TextBlock>
            <TextBlock Text=", "></TextBlock>
            <TextBlock Text="{Binding YearProduct}"></TextBlock>
            <TextBlock Text=", "></TextBlock>
            <TextBlock Text="{Binding Color}"></TextBlock>
            <TextBlock Text=", "></TextBlock>
            <TextBlock Text="{Binding Class.ClassName}" ></TextBlock>
            <TextBlock Text=", "></TextBlock>
            <TextBlock Text="{Binding Price}"></TextBlock>
            <TextBlock Text="₽"></TextBlock>
        </StackPanel>

        <TextBox Name="tbVIN" Text="{Binding CarVIN}" Grid.Column="1" Grid.Row="4" Height="30" Width="225" HorizontalAlignment="Left"  Margin="3 0 0 0" MaxLength="17" CharacterCasing="Upper" PreviewTextInput="tbVIN_PreviewTextInput"></TextBox>

        <ListView Name="CarSaleListView" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" HorizontalContentAlignment="Stretch" Margin="25 0 25 10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="350"></ColumnDefinition>
                            <ColumnDefinition Width="350"></ColumnDefinition>
                            <ColumnDefinition Width="200"></ColumnDefinition>
                            <ColumnDefinition Width="235"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding WorkerFullName}" FontSize="20" Grid.Column="0" Margin="5" ></TextBlock>
                        <TextBlock Text="{Binding ClientFullName}" FontSize="20" Grid.Column="1" Margin="5" ></TextBlock>
                        <TextBlock Text="{Binding Date, StringFormat={}{0:dd.MM.yyyy}}" FontSize="20" Grid.Column="2" Margin="5"></TextBlock>
                        <TextBlock Text="{Binding CarVIN}" FontSize="20" Margin="5" Grid.Column="3"></TextBlock>

                        <Button Name="btnDeleteSale" Content="Удалить" Grid.Column="4" CommandParameter="{Binding SaleID}" Click="btnDeleteSale_Click"></Button>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Vertical" Grid.RowSpan="5" HorizontalAlignment="Right" Margin="10">
            <TextBlock Text="Фото" Height="20" Width="auto" HorizontalAlignment="Center"></TextBlock>
            <Image Name="LogoImage" Stretch="UniformToFill" HorizontalAlignment="Center" Height="150" Width="300">
                <Image.Source>
                    <Binding Path="Image">
                        <Binding.TargetNullValue>
                            <ImageSource>
                                image/car_noback.png
                            </ImageSource>
                        </Binding.TargetNullValue>
                    </Binding>
                </Image.Source>
            </Image>
        </StackPanel>

        <Button Name="SaleButton" Content="Создать продажу" Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Click="SaleButton_Click"></Button>

    </Grid>
</Page>
